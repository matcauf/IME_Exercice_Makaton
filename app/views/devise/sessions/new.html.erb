<div class="container">
<h2>Connexion</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :username, :label => "Identifiant", :required => false %>
    <%= f.input :password, :label => "Mot de passe", :required => false  %>
    <%= f.input :remember_me, :label => "Se souvenir de moi", :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Connexion", :class => "btn btn-primary"%>
  </div>
<% end %>
</div>
