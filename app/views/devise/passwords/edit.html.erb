<h2>Change mon mot de passe</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, :label => "Nouveau mot de passe", :required => true, :autofocus => true %>
    <%= f.input :password_confirmation, :label => "Confimer le mot de passe", :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change mon mot de passe" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
